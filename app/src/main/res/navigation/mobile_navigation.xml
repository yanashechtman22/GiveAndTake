<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.giveandtake.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
        <action
            android:id="@+id/action_nav_home_to_nav_adAdd"
            app:destination="@id/nav_adAdd" />
    </fragment>

    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.example.giveandtake.ui.Posts.PostDetailsFragment"
        android:label="Note details"
        tools:layout="@layout/fragment_post_details">
        <argument
            android:name="post_id"
            app:argType="string" />
         <action
            android:id="@+id/action_postDetailsFragment_to_fragment_edit_post"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_postDetailsFragment_to_home"
            app:destination="@id/nav_home"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/nav_adAdd"
        android:name="com.example.giveandtake.ui.Posts.AddPostFragment"
        android:label="@string/add_new_ad"
        tools:layout="@layout/fragment_add_post" >
        <action
            android:id="@+id/action_nav_adAdd_to_nav_home2"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.giveandtake.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>
