<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home"
    tools:ignore="ExtraText">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.giveandtake.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
        <action
            android:id="@+id/action_nav_home_to_nav_adAdd"
            app:destination="@id/nav_postAdd" />
    </fragment>

    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.example.giveandtake.ui.Posts.PostDetailsFragment"
        android:label="Post details"
        tools:layout="@layout/fragment_post_details">
        <argument
            android:name="post_id"
            app:argType="string" />
        <action
            android:id="@+id/action_postDetailsFragment_to_fragment_edit_post"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_postDetailsFragment_to_home"
            app:destination="@id/nav_home"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_postDetailsFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_postAdd"
        android:name="com.example.giveandtake.ui.Posts.AddPostFragment"
        android:label="@string/add_new_post"
        tools:layout="@layout/fragment_add_post">
        <action
            android:id="@+id/action_nav_addPost_to_nav_home2"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_map"
        android:name="com.example.giveandtake.ui.map.MapFragment"
        android:label="@string/menu_map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_nav_map_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/user_profile_page"
        android:name="com.example.giveandtake.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_user_profile_page_to_loginFragment2"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_user_profile_page_to_nav_adAdd"
            app:destination="@id/nav_postAdd" />
        <action
            android:id="@+id/action_user_profile_page_to_editPostFragment"
            app:destination="@id/editPostFragment" />
        <argument
            android:name="postId"
            app:argType="string" />
        <action
            android:id="@+id/action_user_profile_page_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
        <action
            android:id="@+id/action_user_profile_page_to_userNotFoundFragment"
            app:destination="@id/userNotFoundFragment" />
    </fragment>

    <fragment
        android:id="@+id/editPostFragment"
        android:name="com.example.giveandtake.ui.Posts.EditPostFragment"
        android:label="fragment_edit_post"
        tools:layout="@layout/fragment_edit_post">
        <argument
            android:name="post_id"
            app:argType="string" />
        <action
            android:id="@+id/action_editPostFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/userNotFoundFragment"
        android:name="com.example.giveandtake.ui.error.UserNotFoundFragment"
        android:label="fragment_user_not_found"
        tools:layout="@layout/fragment_user_not_found" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.giveandtake.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.giveandtake.auth.RegisterFragment"
        android:label="Signup"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>
