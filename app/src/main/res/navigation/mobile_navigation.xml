<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.giveandtake.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_userProfileFragment2"
            app:destination="@id/userProfileFragment2" />
        <action 
            android:id="@+id/action_home_to_adDetailsFragment"
            app:destination="@id/adDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/adDetailsFragment"
        android:name="com.example.giveandtake.ui.Posts.PostDetailsFragment"
        android:label="Note details"
        tools:layout="@layout/fragment_post_details">
        <argument
            android:name="post_id"
            app:argType="string" />
         <action
            android:id="@+id/action_adDetailsFragment_to_fragment_edit_ad"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_noteDetailsFragment_to_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/nav_adAdd"
        android:name="com.example.giveandtake.ui.Posts.AddPostFragment"
        android:label="@string/add_new_ad"
        tools:layout="@layout/fragment_add_post" >
        <action
            android:id="@+id/action_nav_adAdd_to_nav_home2"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.giveandtake.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/userProfileFragment2"
        android:name="com.example.giveandtake.ui.profile.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" />
</navigation>
