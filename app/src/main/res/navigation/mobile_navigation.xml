<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.giveandtake.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_adDetailsFragment"
            app:destination="@id/adDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/adDetailsFragment"
        android:name="com.example.giveandtake.ui.Ads.NoteDetailsFragment"
        android:label="Note details"
        tools:layout="@layout/fragment_ad_details">
        <argument
            android:name="note_id"
            app:argType="string" />
         <action
            android:id="@+id/action_adDetailsFragment_to_fragment_edit_ad"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_noteDetailsFragment_to_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/nav_adAdd"
        android:name="com.example.giveandtake.ui.Ads.AddAdFragment"
        android:label="@string/add_new_ad"
        tools:layout="@layout/fragment_add_ad" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.giveandtake.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
</navigation>