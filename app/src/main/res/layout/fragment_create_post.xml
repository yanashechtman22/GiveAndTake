<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.post.CreatePostFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/createPost_locationInput"
        android:layout_width="262dp"
        android:layout_height="43dp"
        android:hint="Name of city"
        app:layout_constraintStart_toEndOf="@+id/createPost_locationText"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="429dp" />

    <TextView
        android:id="@+id/createPost_title"
        android:layout_width="108dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Create post"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/createPost_imageText"
        android:layout_width="374dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Item Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPost_descriptionInput"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/createPost_descriptionInput"
        android:layout_width="368dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:hint="Describe your item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPost_title" />

    <ImageView
        android:id="@+id/creatPost_image"
        android:layout_width="196dp"
        android:layout_height="162dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_menu_gallery"
        app:layout_constraintTop_toBottomOf="@+id/createPost_imageText"
        tools:layout_editor_absoluteX="115dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/createPost_locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="441dp"
        tools:ignore="MissingConstraints" />

